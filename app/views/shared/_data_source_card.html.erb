<div class="data-source-card">
  <div class="details">
    <h4><%= link_to data_source.url, app_data_source_queries_path(data_source), class: "link secondary" %></h4>

    <% if request.path == app_data_source_path(data_source) %>
      <%= link_to app_data_sources_path, class: "link secondary settings" do %>
        <i class="ri-close-line red-500"></i>
        <span>Close</span>
      <% end %>
    <% else %>
      <%= link_to app_data_source_path(data_source), class: "link secondary settings" do %>
        <i class="ri-settings-3-line red-500"></i>
        <span>Settings</span>
      <% end %>
    <% end %>
  </div>
  <div class="stat total-events">
    <p class="title gray-200">Total events</p>
    <h3 class="red-500">
      <%= @data_sources_stats.total_events_for(data_source:) %>
    </h3>
    <p class="subtitle small gray-500">Since: <%= data_source.created_at.strftime('%d/%m/%y') %></p>
  </div>
  <div class="stat monthly-events">
    <p class="title gray-200">Events this month</p>
    <h3 class="red-500">
      <%= @data_sources_stats.monthly_events_for(data_source:) %>
    </h3>
    <p class="subtitle small gray-500">of 15,000</p>
  </div>
  <div class="stat queries">
    <p class="title gray-200">Related queries</p>
    <h3 class="red-500">
      <%= @data_sources_stats.queries_for(data_source:) %>
    </h3>
    <p class="subtitle small gray-500">View</p>
  </div>
</div>
