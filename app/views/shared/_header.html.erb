<header class="header">
  <% if signed_in? %>
    <%= link_to app_dashboard_index_path do %>
      <%= image_tag "logo-dark.svg", height: 24, width: 108, alt: "Logo", class: "logo-dark" %>
      <%= image_tag "logo-light.svg", height: 24, width: 108, alt: "Logo", class: "logo-light" %>
    <% end %>

    <menu>
      <%= link_to "Log out", auth_signout_index_path, class: "link secondary text-large" %>
    </menu>
  <% else %>
    <%= link_to root_path do %>
      <%= image_tag "logo-dark.svg", height: 24, width: 108, alt: "Logo", class: "logo-dark" %>
      <%= image_tag "logo-light.svg", height: 24, width: 108, alt: "Logo", class: "logo-light" %>
    <% end %>

    <menu>
      <% if signup_page? %>
        <p>Already have an account? <%= link_to "Log in", auth_login_index_path, class: "link secondary text-large" %>
      <% elsif login_page? %>
        <p>New to sqlbook? <%= link_to "[Sign up]", auth_signup_index_path, class: "link primary text-large" %>
      <% else %>
        <%= link_to "[Sign up]", auth_signup_index_path, class: "link primary text-large" %>
        <%= link_to "Log in", auth_login_index_path, class: "link secondary text-large" %>
      <% end %>
    </menu>
  <% end %>
</header>
